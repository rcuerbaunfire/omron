{% if fields.items|length %}
	<section class="{{ block.slug }} bg-{{ fields.bg }}">
		{% if block.anchor %}
			<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
		{% endif %}

		{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xl" %}
		{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-xl" %}

		<div class="{{ pt }} {{ pb }}">
			<div class="inner flex flex-col">
				{% for item in fields.items %}
                    {% if item.anchor_id %}
                        <div class="pointer-events-none translate-y-[-5rem]" id="{{ item.anchor_id }}"></div>
                    {% endif %}
                    
					<div class="item md:sticky md:top-[4rem] bg-{{ fields.bg }} relative">
						<div class="container">
							<div class="flex w-full pt-0 md:pt-[4rem] ~gap-[1.5rem]/[8.625rem] max-md:flex-col">
								<div class="md:basis-[34.125rem] md:flex-1 flex ~gap-[0.75rem]/[6rem] max-lg:flex-col">
									{% set index = loop.index <= 9 ? '0' ~ loop.index : loop.index %}
									<small class="pt-[0.75rem] text-black-60">{{ index }}</small>

									<div class="flex-1 flex flex-col ~gap-[1.5rem]/[2.25rem]">
										<div class="flex flex-col ~gap-[1.25rem]/[1.5rem]">
											{% include 'components/heading.twig' with {
                                                'class': 'main-title',
                                                'value': item.cffob_th_heading.value, 
                                                'type': item.cffob_th_heading.type != "default" ? item.cffob_th_heading.type : "h3",
                                                'has_custom_style': item.cffob_th_heading.has_custom_style,
                                                'style': item.cffob_th_heading.style,
                                                'to_words': true
                                            } %}

											{% if item.cffob_tp_paragraph %}
												<div class="rich-text para-desc">{{ item.cffob_tp_paragraph }}</div>
											{% endif %}
										</div>

										{% if item.tags|length %}
											<div class="flex flex-col gap-[0.75rem]">
												{% if item.tag_label %}
													<small class="text-black-60">{{ item.tag_label }}</small>
												{% endif %}

												<div class="flex gap-[0.75rem] flex-wrap">
													{% for tag in item.tags %}
														{% if tag.link %}
															{% set link_url = tag.link.url ?: "#" %}
															{% set link_title = tag.link.title %}
															{% set link_target = tag.link.target ?: "_self" %}

															<a class="tag" href="{{ link_url }}" target="{{ link_target }}">
																<p>{{ link_title }}</p>
															</a>
														{% endif %}

													{% endfor %}
												</div>
											</div>
										{% endif %}

                                        {% include 'components/cta.twig' with {
                                            'class' : 'filled blue',
                                            'cta': item.cta, 
                                            'icon': true,
                                        } %}
									</div>
								</div>

								<div class="md:basis-[41.25rem] {{ item.image is empty ? "max-md:hidden" }} ~h-[19.125rem]/[40.5rem] md:flex-1 rounded-[0.5rem] overflow-hidden relative">
									{% include 'components/image.twig' with {
                                        'image': item.image,
                                        'class': 'object-cover h-full w-full',
                                        'size': "large",
                                    } %}

									{% if item.image %}
										<div class="ticker translate-y-[-100%] top-0 right-0 ~w-[1.25rem]/[1.875rem] h-[20.25rem] z-[2] absolute">
											<svg class="w-full h-auto" width="30" height="324" viewbox="0 0 30 324" fill="none" xmlns="http://www.w3.org/2000/svg">
												<line x1="15" y1="0.112304" x2="15" y2="323.112" stroke="url(#paint0_linear_5567_11126)" stroke-width="30" stroke-dasharray="3 7"/>
												<defs>
													<linearGradient id="paint0_linear_5567_11126" x1="16" y1="0.112304" x2="15.2705" y2="323.117" gradientunits="userSpaceOnUse">
														<stop stop-color="#6AFF96" stop-opacity="0"/>
														<stop offset="1" stop-color="#6AFF96"/>
													</linearGradient>
												</defs>
											</svg>
										</div>
									{% endif %}
								</div>
							</div>
						</div>
					</div>

                    {% if not loop.last %}
                        <div class="spacer ~h-[2.25rem]/[6rem]"></div>
                    {% endif %}
				{% endfor %}
			</div>
		</div>
	</section>
{% endif %}

