<section class="{{ block.slug }} bg-{{ fields.bg }} {{ fields.is_inverted ? "is-inverted" }}">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-xxl" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-xxl" %}

    {% set media_image = fields.media_type == "image" and fields.image %}
    {% set media_video = fields.media_type == "video" and fields.video %}

	<div class="container">
		<div class="{{ pt }} {{ pb }}">
			<div class="inner flex max-md:flex-col ~gap-[3rem]/[8.625rem] items-center">
				{% if media_image or media_video %}
					<div class="rounded-[0.375rem] overflow-hidden relative w-full md:basis-[34.125rem] md:flex-1 {{ media_image ? "~h-[24.25rem]/[40.5rem]" }}">
						{% if fields.media_type == "image" %}
							{% if fields.image %}
                                <div class="ticker translate-y-[-100%] top-0 left-0 ~w-[1.25rem]/[1.875rem] h-[20.25rem] z-[2] absolute">
                                    <svg class="w-full h-auto" width="30" height="324" viewbox="0 0 30 324" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <line x1="15" y1="0.112304" x2="15" y2="323.112" stroke="url(#paint0_linear_5567_11126)" stroke-width="30" stroke-dasharray="3 7"/>
                                        <defs>
                                            <linearGradient id="paint0_linear_5567_11126" x1="16" y1="0.112304" x2="15.2705" y2="323.117" gradientunits="userSpaceOnUse">
                                                <stop stop-color="#6AFF96" stop-opacity="0"/>
                                                <stop offset="1" stop-color="#6AFF96"/>
                                            </linearGradient>
                                        </defs>
                                    </svg>
                                </div>
                                
								{% include 'components/image.twig' with {
                                    'image': fields.image,
                                    'class': 'h-full w-full rounded-[0.375rem] overflow-hidden ' ~ (fields.image_size == "size-fit" ? "object-contain" : "object-cover"),
                                    'size': [546, 648],
                                } %}
							{% endif %}
						{% else %}
							{% if fields.video %}
								<div class="video-container" data-video-id="{{ fields.video }}"></div>
							{% endif %}
						{% endif %}
					</div>
				{% endif %}

				<div class="flex flex-col md:flex-1 md:basis-[41.25rem] ~gap-[1.5rem]/[2.25rem] h-fit relative">
					<div class="w-full max-md:flex max-md:flex-col max-md:gap-[0.75rem] md:max-w-[62.75rem] relative pr-[2.25rem]">
						{% if fields.heading %}
							{% include 'components/heading.twig' with {
                                'class': 'main-title',
                                'insert_eyebrow': fields.eyebrow ? true : false,
                                'eyebrow': fields.eyebrow,
                                'value': fields.heading.value, 
                                'type': fields.heading.type != "default" ? fields.heading.type : "h3",
                                'has_custom_style': fields.heading.has_custom_style,
                                'style': fields.heading.style,
                                'to_words': true
                            } %}
						{% endif %}
					</div>

					{% if fields.paragraph or fields.cta %}
						<div class="flex flex-col ~gap-[1.25rem]/[1.5rem]">
							{% if fields.paragraph %}
								<div class="rich-text para-desc">{{ fields.paragraph }}</div>
							{% endif %}

							{% if fields.has_items and fields.items|length %}
								<div class="items alpha grid grid-cols-1 xl:grid-cols-2 ~gap-[1.25rem]/[1.5rem] max-w-[41.25rem] w-full">
									{% for item in fields.items %}
										<div class="flex items-center gap-[0.75rem]">
											{% include 'components/image.twig' with {
                                                'image': item.item_image,
                                                'class': 'object-contain h-[2.25rem] w-[2.25rem] shrink-0',
                                                'size': [36, 36],
                                            } %}

											{% if item.item_content %}
												<p class="flex-1">{{ item.item_content }}</p>
											{% endif %}
										</div>
									{% endfor %}
								</div>
							{% endif %}

							{% if fields.cta or fields.secondary_cta %}
								<div class="flex flex-wrap gap-[0.75rem]">
                                    {% include 'components/cta.twig' with {
                                        'class' : 'filled blue',
                                        'cta': fields.cta, 
                                        'icon': true,
                                    } %}

                                    {% include 'components/cta.twig' with {
                                        'class' : 'has-border blue',
                                        'cta': fields.secondary_cta, 
                                        'icon': true,
                                    } %}

                                    {% include 'components/cta.twig' with {
                                        'class' : 'filled blue',
                                        'cta': fields.tertiary_cta, 
                                        'icon': true,
                                    } %}
								</div>
							{% endif %}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>

